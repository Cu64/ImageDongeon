{% extends "base.html.jinja" %} {% block content %}
<div class="container-fluid pl-4 pr-4 pt-4 ml-0 mr-0 mh-100">
    <div class="row">
        <div class="col-2">
            <h5 class='font-weight-bold'>Tags</h5>
            <ul class='list-unstyled'>
                {% for tag in post['tags'] %}
                <li>{{ tag }}</li>
                {% endfor %}
            </ul>
            <h5 class='font-weight-bold'>Satistics</h5>
            <ul class='list-unstyled'>
                <li>ID: {{ post['id'] }}</li>
                <li>Posted on: {{ post['post_time'] }}</li>
                <li>Size: {{ post['width'] }}x{{ post['height'] }}</li>
                <li>Rating: {{ post['rating'] }}</li>
            </ul>
        </div>
        <div class="col-10">
            <img class="img-fluid" src="{{ '/api/v1.0/images/{0}'.format(post['id']) }}" />
        </div>
    </div>
</div>
{% endblock %}